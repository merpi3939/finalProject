			bluemoon_user 
		set 
			user_withdrowdate=sysdate,
			user_state=4 
		where 
			user_no=#{userNo}
	</update>
 -->
	
	<select id="selectUserId" parameterType="int" resultType="User">
		select 
			* 
		from 
			bluemoon_user 
		where 
			user_no=#{userNo}
	</select>
	
	<select id="selectUserList" resultType="User">
		select
			*
		from
			bluemoon_user
		order by
			user_no desc
	</select>
</mapper>